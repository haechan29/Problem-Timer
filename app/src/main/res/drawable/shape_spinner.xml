<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <stroke
            android:width="1dp"
            android:color="#000000" />
        <corners
            android:radius="4dp"/>
        <solid
            android:color="@color/transparent" />
    </shape>
</item>
<item
    android:gravity="center_vertical|right"
    android:right="5dp">
    <layer-list>
        <item
            android:gravity="right" android:width="15dp" android:height="9dp"
            android:drawable="@drawable/resized_down_arrow">
        </item>
    </layer-list>
</item>
</layer-list>