<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProblemTimerTest" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="editText" parent="Theme.Design.Light.NoActionBar">
        <item name="colorAccent">@color/activated</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <!-- book_item.xml에서 container_problem_record_by_unit의 gridlayout 영역에 적용되는 스타일 -->
    <style name="ProblemRecordByUnit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <!-- book_item.xml에서 container_problem_record_by_unit의 대단원명을 표시하는 영역에 적용되는 스타일 -->
    <style name="ProblemRecordUnit1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- book_item.xml에서 container_problem_record_by_unit의 중단원명을 표시하는 영역에 적용되는 스타일 -->
    <style name="ProblemRecordUnit2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- book.item.xml에서 container_problem_record_by_unit의 중단원별 점수를 표시하는 영역에 적용되는 스타일 -->
    <style name="ProblemRecordScoreByUnit2">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <!-- book_item.xml에서 container_problem_record_by_unit의 등급을 표시하는 영역에 적용되는 스타일 -->
    <style name="ProblemRecordRank">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <!-- book_item.xml에서 container_problem_record_by_unit의 백분율을 표시하는 영역에 적용되는 스타일 -->
    <style name="ProblemRecordPercentage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="DialogAddBookBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/selector_text</item>
        <item name="android:background">@drawable/selector_radio</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:elevation">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>